@using ChefNDishes.Models
@model ViewNewDish




<h1>Add a Dish!</h1>
<a href="/">Home</a>

<form asp-action="cook" method="post" asp-controller="Home">
        <div class="card-group">
        <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="NewDish.Dishname">Name of Dish:</label>
                <input asp-for="NewDish.Dishname" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="NewDish.Dishname"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewDish.Calories"># of Calories:</label>
                <input asp-for="NewDish.Calories" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="NewDish.Calories"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewDish.Description">Description</label>
                <textarea asp-for="NewDish.Description" row="3" class="form-control" >Type Your Comment Here</textarea>
                <span class="text-danger" asp-validation-for="NewDish.Description"></span>
            </div>
        </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="NewDish.ChefId">Chef</label>
                    <select asp-for= "NewDish.ChefId" class="custom-select">
                            <option selected disabled>Choose a Chef</option>
                            @{foreach(var h in Model.AllChefs)
                            {
                            <option value = "@h.ChefId">@h.FirstName @h.LastName</option>
                            }
                            }
                    </select>
                    <span class="text-danger" asp-validation-for="NewDish.ChefId"></span>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="NewDish.Tastiness">Tastiness</label>
                    <select asp-for= "NewDish.Tastiness" class="custom-select">
                            <option selected disabled>Choose a Tastiness</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                    </select>
                    <span class="text-danger" asp-validation-for="NewDish.Tastiness"></span>
                </div>
            </div>
        </div>
        </div>
    <div class="form-group">
        <button type="submit" class="btn btn-secondary m-1">Add dish</button>
    </div>
</form>